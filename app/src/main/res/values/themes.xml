<resources>
    <!-- Base Theme -->
    <style name="Theme.FindApart" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryContainer">@color/blue_primary_container</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/blue_secondary</item>
        <item name="colorSecondaryContainer">@color/blue_secondary_container</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Tertiary Colors -->
        <item name="colorTertiary">@color/orange_accent</item>
        <item name="colorTertiaryContainer">@color/orange_accent_container</item>
        <item name="colorOnTertiary">@color/white</item>

        <!-- Background and Surface -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Error Colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>

        <!-- Navigation and AppBar Colors -->
        <item name="colorSurfaceVariant">@color/blue_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/blue_light</item>
        <item name="android:navigationBarColor">@color/blue_light</item>

        <!-- Component Styles -->
        <item name="bottomNavigationStyle">@style/Widget.FindApart.BottomNavigationView</item>
        <item name="collapsingToolbarLayoutStyle">@style/Widget.FindApart.CollapsingToolbar</item>
        <item name="floatingActionButtonStyle">@style/Widget.Material3.FloatingActionButton.Primary</item>
        <item name="extendedFloatingActionButtonStyle">@style/Widget.Material3.ExtendedFloatingActionButton.Secondary</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu</item>
    </style>

    <style name="Widget.FindApart.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.FindApart.CollapsingToolbar" parent="Widget.Material3.CollapsingToolbar">
        <item name="android:background">@color/blue_light</item>
    </style>

</resources>